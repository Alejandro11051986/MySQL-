SELECT FILNAME, CURATOR, TABNUM, DS.DO, PRODUCT, SUM(SUM_SELL), COUNT(*) AS 'Количество продаж' 
FROM DATA_SALES AS DS
	LEFT JOIN DIRECTORY_OF_BRANCHES AS DOB ON (DS.DO=DOB.DO)
	LEFT JOIN PRODUCTS_REFERENCE AS PR ON((PR.PRODUCT LIKE '%Ипотечный кредит%' OR PR.PRODUCT LIKE '%Потребительский кредит%')AND(DS.ID_PRODUCT=PR.ID_PRODUCT))
WHERE (DS.DATE BETWEEN '2021-08-01' AND '2021-08-31') AND NOT ISNULL(PRODUCT)
GROUP BY TABNUM, PRODUCT
ORDER BY TABNUM;

